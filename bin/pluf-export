#!/bin/bash

DISTANCE=pluf
compressFileName=pluf


rm -fR $DISTANCE
mkdir $DISTANCE

cp -fR ../pluf/src/* $DISTANCE
cp -fR ../pluf-bank/src/* $DISTANCE
cp -fR ../pluf-inbox/src/* $DISTANCE
cp -fR ../pluf-km/src/* $DISTANCE
cp -fR ../pluf-saas/src/* $DISTANCE
cp -fR ../pluf-user/src/* $DISTANCE
cp -fR ../pluf-wiki/src/* $DISTANCE

rm -f ${compressFileName}.tar.gz
tar -zcvf ${compressFileName}.tar.gz $DISTANCE/*
rm -fR $DISTANCE